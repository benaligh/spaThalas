{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="card m-4">
        <h5 class="card-header">Prendre un Rendez-vous</h5>
        <div class="card-body">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
                <label>Nom </label>
                {{ form_widget(form.firstname, {'attr': {'placeholder': 'Firstname'}}) }}
            </div>
            <div class="form-group">
                <label>Pr√©nom </label>
                {{ form_widget(form.lastname, {'attr': {'placeholder': 'Lastname'}}) }}
            </div>
            <div class="form-group">
                <label>Email </label>
                {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
            </div>
            <div class="form-row service-options">
                <div class="form-group col-5">
                    <label>Service </label>
                    {{ form_widget(form.services,{'attr': {'placeholder': 'Service'}}) }}
                </div>
                <div class="form-group col-5">
                    <label>Option </label>
                    {{ form_widget(form.options,{'attr': {'placeholder': 'Option'}}) }}
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}